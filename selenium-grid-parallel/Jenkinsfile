pipeline {
    agent any

    environment {
        GRID_URL = "http://localhost:4444/wd/hub"
    }
    tools {
        maven 'Maven'
        jdk 'JAVA_HOME'
    }
    
    parameters {
        string(name: 'Branch_Name', defaultValue: 'master', description: 'Git Branch to be built')
        booleanParam(name: 'STOP_GRID_AFTER_RUN', defaultValue: false, description: 'Stop Selenium Grid after tests')
    }

    stages {
        
       
        
        stage('Log Stop Request') {
    		steps {
       			 echo "Checking if we need to stop Selenium Grid... STOP_GRID_AFTER_RUN - ${params.STOP_GRID_AFTER_RUN}"
   			 }
		}

		
        
    }

    post {
        always {
            script {
				// Read and parse TestNG results safely in sandbox
            def reportPath1 = "selenium-grid-parallel/target/surefire-reports/testng-results.xml"
            extentReportPath = "target/extent-reports/GridParallelExtentReport.html"
            def testngXml1 = readXML file: reportPath1
             // Extract counts
            def passed = testngXml1.@pass.toString()
            def failed = testngXml1.@fail.toString()
            def skipped = testngXml1.@skip.toString()
            echo "TestNG Results1 - Passed: ${passed}, Failed: ${failed}, Skipped: ${skipped}"
				
              
                // Build Summary Table
                def summaryTable = """
                    <h2>TestNG Execution Summary</h2>
                    <table border="1" cellpadding="5" cellspacing="0">
                        <tr><th>Passed</th><th>Failed</th><th>Skipped</th></tr>
                        <tr>
                            <td style='color:green'>${passed}</td>
                            <td style='color:red'>${failed}</td>
                            <td style='color:orange'>${skipped}</td>
                        </tr>
                    </table>
                """

               

                // Final HTML Email Body
                def emailBody = """
                    ${summaryTable}
                   
                    <br>
                    <a href="${env.BUILD_URL}artifact/${extentReportPath}">ðŸ“Š View Full ExtentReport</a>
                    <br><br>
                    Jenkins Build: <a href='${env.BUILD_URL}'>${env.BUILD_URL}</a>
                """

                // Send Email
                emailext(
                    subject: "Test Execution Report - ${currentBuild.currentResult}",
                    body: emailBody,
                    to: "venki.ralami@gmail.com",
                    mimeType: 'text/html'
                )
            }
        }

        success {
            // Archive ExtentReport so email link works
            archiveArtifacts artifacts: 'selenium-grid-parallel/target/extent-reports/**', fingerprint: true
        }
    }
    
     
}
